  <head>
    <meta charset="utf-8">
    <title>Property Detail</title>

  </head>
  <body>

    <%= render partial: 'shared/navbar' %>

    <a href="/properties" style="margin-left:100px; font-size:18px;"><u>Back</u></a>
<center>
  <h1>Property Detail Page</h1>
  <br>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <div class="carousel-inner" role="listbox">
      <div style="width:600px;" class="item active">


        <%@prop_images.each do |image|%>
          <%=image_tag image.image%>
        <%end %>
        <div class="carousel-caption d-none d-md-block">

          <p class="subtitles"><%= @p.address %>, <%= @p.state %> <%= @p.zipcode %><br>
            Contact: <%= @p.contact_name %> <br> Telephone: <%= @p.contact_phone %></p>
        </div>
        <div class="container">
          <div class="carousel-caption">
          </div>
        </div>
      </div>
      <a href="/properties/<%=@p.id%>/zestimate"><h4>Get Zestimate!</h4></a>
</center>


<!-- <div class="imagecontainer">
<div id="thumbs">

    <span class="stretch"></span>
</div>â€‹
</div> -->

<center>
<div class="container">
  <table class="table table-striped table-bordered table-hover">
      <tbody>
          <tr>
            <th>Price:</th>
              <td><%= number_to_currency(@p.price) %></td>
          </tr>
          <tr>
            <th>Taxes:</th>
              <td><%= @p.tax %></td>
          </tr>
        <tr>
            <th>Building Type:</th>
            	<td><%=@p.building_type%></td>
          </tr>
          <tr>
            <th>Year Built </th>
              <td><%=@p.year_built.strftime('%B %d, %Y')%></td>
          </tr>
          <tr>
            <th>Status: </th>
              <td><%= @p.status %></td>
          </tr>
      </tbody>
  </table>
</div>
<div class="container1">
  <table class="table table-striped table-bordered table-hover">
      <tbody>
          <tr>
            <th>Bedrooms</th>
              <td><%= @p.no_bed%></td>
          </tr>
          <tr>
            <th>Baths:</th>
              <td><%= @p.no_bath %></td>
          </tr>
        <tr>
            <th>Building Type:</th>
              <td><%=@p.building_type%></td>
          </tr>
          <tr>
            <th>Garage: </th>
              <td>
                <% if @p.garage %>
                  <%= "Yes" %>
                <% else %>
                  <%= "No" %>
                <% end %>
                </td>
          </tr>
          <tr>
            <th>Parking: </th>
              <td><%= @p.parking %></td>
          </tr>
      </tbody>
    </table>
</div>
</center>

</body>
